# Telegram Bot Token (получить у @BotFather)
BOT_TOKEN=your_bot_token_here

# Список Telegram user_id админов (JSON-массив)
# Чтобы узнать свой ID, напишите @userinfobot
ADMINS=[123456789,987654321]

# GigaChat API credentials (получить на https://developers.sber.ru/portal/products/gigachat)
GIGACHAT_CREDENTIALS=your_gigachat_credentials_here
GIGACHAT_SCOPE=GIGACHAT_API_PERS
GIGACHAT_VERIFY_SSL=false

# Пути к JSON файлам базы данных (можно оставить по умолчанию)
DB_USERS_PATH=bot/data/users.json
DB_TEAMS_PATH=bot/data/teams.json
DB_ROUNDS_PATH=bot/data/rounds.json
DB_SOLUTIONS_PATH=bot/data/solutions.json
DB_MODERATORS_PATH=bot/data/moderators.json
